#!/usr/bin/env perl
use warnings;
use strict;
use open qw(locale);
use feature 'say';

#------------------------------------------------------------------------------
use File::Basename qw(basename);
our $PROGNAME = basename($0);

###############################################################################

use URI::Escape qw(uri_unescape);

while (<>) {
    s{\R\z}{};
    say uri_unescape($_);
}
